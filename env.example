# ===========================================
# TimeGuard AI - Environment Configuration
# ===========================================

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
APP_NAME="TimeGuard AI"
APP_VERSION="1.0.0"

# ===========================================
# SharePoint / Microsoft Graph API Configuration
# ===========================================
# Get these from Azure Portal > App Registrations
SHAREPOINT_CLIENT_ID=your-azure-app-client-id
SHAREPOINT_CLIENT_SECRET=your-azure-app-client-secret
SHAREPOINT_TENANT_ID=your-azure-tenant-id

# SharePoint Site Configuration
# Get from your SharePoint site URL
SHAREPOINT_SITE_ID=your-sharepoint-site-id
SHAREPOINT_SITE_URL=https://yourcompany.sharepoint.com/sites/timesheets

# SharePoint List IDs
# Get these from your SharePoint lists
RESOURCE_LIST_ID="Digital Services - Resources Database (w/o cost)"
NOTIFICATION_LIST_ID="TimeGuard-Notifications"
TIMESHEET_FOLDER_ID="Timesheet to Vendor"
CLIENT_VENDOR_LIST_ID="Client & Vendor Names"

# ===========================================
# Outlook 365 / Email Service Configuration
# ===========================================
# Use the same Azure app for email
OUTLOOK_CLIENT_ID=your-azure-app-client-id
OUTLOOK_CLIENT_SECRET=your-azure-app-client-secret
OUTLOOK_TENANT_ID=your-azure-tenant-id

# Email Configuration
FROM_EMAIL=noreply@yourcompany.com
FROM_NAME="TimeGuard AI"
REPLY_TO_EMAIL=support@yourcompany.com

# SMTP Configuration (Alternative to Graph API)
SMTP_SERVER=smtp.office365.com
SMTP_PORT=587
SMTP_USERNAME=your_email@yourcompany.com
SMTP_PASSWORD=your_app_password

# ===========================================
# AI Services Configuration
# ===========================================
# OpenAI API Key (get from https://platform.openai.com)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# LangChain Configuration
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your-langchain-api-key

# ===========================================
# PDF Generation Configuration
# ===========================================
PDF_OUTPUT_DIR=./generated_pdfs
PDF_TEMPLATE_DIR=./templates
PDF_FONT_DIR=./fonts

# ReportLab Configuration
PDF_TITLE="TimeGuard AI Timesheet Report"
PDF_AUTHOR="TimeGuard AI System"
PDF_SUBJECT="Monthly Timesheet Report"

# ===========================================
# Database Configuration
# ===========================================
# For future database integration
DATABASE_URL=sqlite:///./timeguard.db
DATABASE_ECHO=false

# ===========================================
# Security Configuration
# ===========================================
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
CORS_ALLOW_CREDENTIALS=true

# ===========================================
# API Configuration
# ===========================================
API_V1_STR=/api
API_TITLE="TimeGuard AI API"
API_DESCRIPTION="AI-powered enterprise timesheet management and automation platform"
API_VERSION=1.0.0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=10

# ===========================================
# Monitoring & Logging
# ===========================================
LOG_FILE=./logs/timeguard.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# ===========================================
# Business Logic Configuration
# ===========================================
# Timesheet Validation Rules
MIN_HOURS_PER_DAY=8
MAX_HOURS_PER_DAY=12
WORKING_DAYS_PER_MONTH=22

# Notification Settings
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=300
NOTIFICATION_EXPIRY_HOURS=24

# Email Settings
EMAIL_BATCH_SIZE=10
EMAIL_DELAY_BETWEEN_BATCHES=60

# ===========================================
# Development Settings
# ===========================================
# Only for development - remove in production
MOCK_DATA_ENABLED=true
MOCK_SHAREPOINT_DATA=true
MOCK_EMAIL_SENDING=true

# Development URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# ===========================================
# Teams Integration (Optional)
# ===========================================
TEAMS_WEBHOOK_URL=your-teams-webhook-url
TEAMS_CHANNEL_ID=your-teams-channel-id

# ===========================================
# File Upload Configuration
# ===========================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=xlsx,xls
UPLOAD_DIR=./uploads

# ===========================================
# Notification Configuration
# ===========================================
GRC_APPROVER_EMAIL=grc.approver@company.com
ADMIN_EMAIL=admin@company.com

# ===========================================
# Performance Configuration
# ===========================================
CACHE_TTL=300
REQUEST_TIMEOUT=30

# ===========================================
# Production Settings (uncomment for production)
# ===========================================
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# MOCK_DATA_ENABLED=false
# MOCK_SHAREPOINT_DATA=false
# MOCK_EMAIL_SENDING=false